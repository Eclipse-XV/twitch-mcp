# syntax=docker/dockerfile:1

# Base image with Node.js
ARG NODE_VERSION=22.13.1
FROM node:${NODE_VERSION}-slim AS base
WORKDIR /app

# Install system dependencies: Java 17 (OpenJDK)
FROM eclipse-temurin:17-jre AS java-base

# Copy only package.json and package-lock.json first for better layer caching
COPY --link package.json package-lock.json ./

# Install production dependencies with cache
RUN --mount=type=cache,target=/root/.npm \
    npm ci --production

# Copy the rest of the application
COPY --link . .

# Set environment variables for production
ENV NODE_ENV=production
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Create a non-root user and switch to it
RUN addgroup --system appgroup && adduser --system --ingroup appgroup appuser
USER appuser

# Expose port if needed (not specified in README, so omitted)

# Default command: run the server (uses the npm start script)
CMD ["npm", "start"]
